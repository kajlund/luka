<!DOCTYPE html>
<html lang="en" class="sl-theme-light">
<head>
  <%- include('../../partials/head') %>
  <link rel="stylesheet" href="/css/resources.css" />
  <script type="module" src="/js/resources.js" defer></script>
</head>
<body>
  <%- include('../../partials/header') %>
  <main>
    <section class="page-header">
      <div class="filters">
        <% if (categories.length) { %>
          <sl-select id="categoryFilter" label="Categories"
            value="<%= filter.category %>" size="large">
            <% categories.forEach(function(category) { %>
              <sl-option value="<%= category %>"><%= category %></sl-option>
            <% }); %>
          </sl-select>
        <% } else { %>
          <p>No categories to filter by</p>
        <% } %>

        <% if (resources.length) { %>
          <sl-select id="tagFilter" label="Tags"
            value="<%= filter.tags.join(' ') %>" style="margin-left: 2rem; min-width: 100px;"
            multiple clearable size="large">
            <% tags.forEach(function(tag) { %>
              <sl-option value="<%= tag %>"><%= tag %></sl-option>
            <% }); %>
          </sl-select>
        <% } else { %>
          <p>No tags to filter by</p>
        <% } %>
      </div>

      <div class="commands">
        <a class="btn btn-primary" href="/resources/add">Add</a>
      </div>
    </section>

    <section class="resources">
    <% if (resources.length) { %>
      <% resources.forEach(function(resource) { %>
      <div class="card">
        <div class="card-header">
          <div class="header-left">
            <h1 class="title"><%= resource.name %></h1>
            <a href="<%= resource.url %>" target="_blank">
              <i class="ri-external-link-line"></i>
            </a>
          </div>

          <div class="header-right">
            <a href="/resources/<%= resource.id %>/upvote">
              <i class="ri-thumb-up-line"></i>
            </a>
            <a href="/resources/<%= resource.id %>/downvote">
              <i class="ri-thumb-down-line"></i>
            </a>
            <a href="/resources/<%= resource.id %>/edit">
              <i class="ri-edit-box-line"></i>
            </a>
          </div>
        </div>
        <div class="card-content">
            <%= resource.description %>
        </div>
        <div class="card-footer">
          <p><%= resource.category %></p>
          <p><%= resource.tags %></p>
        </div>
      </div>
      <% }); %>
    <% } else { %>
      <p>No resources</p>
    <% } %>
    </section>
  </main>

</body>
</html>